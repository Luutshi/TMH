{% extends 'base.html.twig' %}

{% block css %}
    <link rel="stylesheet" href="./css/Page/locationAdmin.css">
{% endblock %}

{% block title %}{% endblock %}

{% block content %}
    <p>Create</p>

    <div>
        <form action="" method="POST">
            <label for="houseCity">Ville de la maison: </label>
            <input type="text" name="houseCity" id="houseCity"/>
            <br>

            <label for="nightPrice">Prix à la nuit (en €): </label>
            <input type="number" name="nightPrice" id="nightPrice"/>
            <br>

            <label for="sqrtMeters">Mètre carré: </label>
            <input type="number" name="sqrtMeters" id="sqrtMeters"/>
            <br>

            <label for="description">Description: </label>
            <textarea id="description" name="description"></textarea>
            <br>

            <label for="dpe">DPE: </label>
            <select name="dpe" id="dpe">
                <option value="A">A</option>
                <option value="B">B</option>
                <option value="C">C</option>
                <option value="D">D</option>
                <option value="E">E</option>
                <option value="F">F</option>
                <option value="G">G</option>
            </select>
            <br>

            <label for="ges">GES: </label>
            <select name="ges" id="ges">
                <option value="A">A</option>
                <option value="B">B</option>
                <option value="C">C</option>
                <option value="D">D</option>
                <option value="E">E</option>
                <option value="F">F</option>
                <option value="G">G</option>
            </select>
            <br>

            <label for="nbOfRooms">Nombre de salles: </label>
            <input type="number" name="nbOfRooms" id="nbOfRooms"/>
            <br>

            <label for="nbOfChambers">Nombre de chambres: </label>
            <input type="number" name="nbOfChambers" id="nbOfChambers"/>
            <br>

            <input type="submit"/>
        </form>
    </div>
{% endblock %}